generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

// Enums
enum UserRole {
  ADMIN
  TEACHER
  STUDENT
  PARENT
}

enum UserStatus {
  PENDING_VERIFICATION  // Email not verified
  PENDING_APPROVAL      // Email verified, awaiting admin approval (teachers)
  ACTIVE                // Fully active
  SUSPENDED             // Temporarily disabled
  REJECTED              // Admin rejected (teachers)
}

enum Language {
  ENGLISH
  HINDI
  MIXED
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum HomeworkStatus {
  PENDING     // Not yet submitted
  SUBMITTED   // Submitted, awaiting grading
  GRADED      // AI or teacher has graded
  LATE        // Submitted after deadline
}

// BHASHINI Language codes (ISO-639)
enum BhashiniLanguage {
  hi  // Hindi
  en  // English
  bn  // Bengali
  ta  // Tamil
  te  // Telugu
  mr  // Marathi
  gu  // Gujarati
  kn  // Kannada
  ml  // Malayalam
  pa  // Punjabi
  or  // Odia
  as  // Assamese
}

enum SessionStatus {
  ACTIVE
  PAUSED
  ENDED
}

// Diagram visibility levels
enum DiagramVisibility {
  PRIVATE // Only creator
  CLASS   // Class members
  SCHOOL  // All school users
}

// Diagram types
enum DiagramType {
  FLOWCHART
  DECISION_TREE
  CONCEPT_MAP
  LESSON_FLOW
}

// Models
model School {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique // Subdomain identifier (e.g., "greenvalley" for greenvalley.aischool.com)
  address   String?
  phone     String?
  email     String?
  settings  Json?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users          User[]
  classes        Class[]
  diagrams       Diagram[]
  subscription   SchoolSubscription?
  featureUsage   FeatureUsage[]
  communityPosts CommunityPost[]

  @@index([slug])
}

model User {
  id                 String     @id @default(cuid())
  email              String     @unique
  password           String?    // Optional for OAuth users (Google, etc.)
  name               String
  phone              String?
  role               UserRole
  status             UserStatus @default(PENDING_VERIFICATION)
  languagePreference Language   @default(ENGLISH)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  // Email verification
  emailVerified      DateTime?
  emailVerifyToken   String?    @unique
  emailVerifyExpires DateTime?

  // Password reset
  passwordResetToken   String?  @unique
  passwordResetExpires DateTime?

  // Admin approval (for teachers)
  approvedAt         DateTime?
  approvedBy         String?    // Admin user ID who approved
  rejectionReason    String?

  schoolId String?
  school   School? @relation(fields: [schoolId], references: [id])

  // Role-specific relations
  teacherClasses TeacherClass[]
  student        Student?
  parentOf       Student[]      @relation("ParentStudent")
  lessons        Lesson[]
  worksheets     Worksheet[]    @relation("CreatedWorksheets")
  homeworks      Homework[]     @relation("TeacherHomework")

  // NextAuth
  accounts Account[]
  sessions Session[]

  // BHASHINI Live Classroom
  classroomSessions ClassroomSession[]

  // Diagrams
  diagrams Diagram[] @relation("CreatedDiagrams")

  // Teacher Training & Community
  trainingProgress     TeacherTrainingProgress[]
  certifications       TeacherCertification[]
  communityPosts       CommunityPost[]    @relation("CommunityPostAuthor")
  communityComments    CommunityComment[] @relation("CommunityCommentAuthor")
  communityVotes       CommunityVote[]
  performanceSnapshots TeacherPerformanceSnapshot[]

  @@index([schoolId])
  @@index([role])
  @@index([schoolId, role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Class {
  id        String   @id @default(cuid())
  name      String
  grade     Int // 1-10
  section   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  schoolId String
  school   School @relation(fields: [schoolId], references: [id])

  students          Student[]
  teacherClasses    TeacherClass[]
  lessons           Lesson[]
  worksheets        Worksheet[]
  homeworks         Homework[]
  classroomSessions ClassroomSession[]
  diagrams          Diagram[]

  @@index([schoolId])
  @@index([schoolId, grade])
}

model Subject {
  id         String @id @default(cuid())
  name       String
  gradeLevel Int? // Optional: specific grade level for this subject

  teacherClasses    TeacherClass[]
  lessons           Lesson[]
  worksheets        Worksheet[]
  chatHistories     ChatHistory[]
  progress          StudentProgress[]
  homeworks         Homework[]
  classroomSessions ClassroomSession[]

  @@unique([name, gradeLevel])
}

model TeacherClass {
  id String @id @default(cuid())

  teacherId String
  teacher   User   @relation(fields: [teacherId], references: [id])

  classId String
  class   Class  @relation(fields: [classId], references: [id])

  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id])

  @@unique([teacherId, classId, subjectId])
}

model Student {
  id         String  @id @default(cuid())
  rollNumber String?

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  classId String
  class   Class  @relation(fields: [classId], references: [id])

  parentId String?
  parent   User?   @relation("ParentStudent", fields: [parentId], references: [id])

  chatHistories       ChatHistory[]
  worksheetResponses  WorksheetResponse[]
  progress            StudentProgress[]
  homeworkSubmissions HomeworkSubmission[]

  // BHASHINI Live Classroom & Peer Chat
  sessionParticipations SessionParticipant[]
  peerMessages          PeerMessage[]
  languageProgress      LanguageProgress[]

  // Elite Features: Study Companion & Learning Paths
  studySessions  StudySession[]
  learningPaths  PersonalizedLearningPath[]
  practiceAttempts PracticeAttempt[]
  studyAnalytics StudyAnalytics[]
}

model Lesson {
  id            String   @id @default(cuid())
  topic         String
  generatedPlan Json // AI-generated lesson plan
  language      Language @default(ENGLISH)
  date          DateTime
  status        String   @default("draft") // draft, published
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  teacherId String
  teacher   User   @relation(fields: [teacherId], references: [id])

  classId String
  class   Class  @relation(fields: [classId], references: [id])

  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id])

  // Optional diagram for visual lesson flow
  diagram Diagram?

  @@index([teacherId])
  @@index([classId])
  @@index([subjectId])
  @@index([teacherId, status])
}

model Worksheet {
  id         String     @id @default(cuid())
  title      String
  questions  Json // Array of questions with answers
  difficulty Difficulty @default(MEDIUM)
  language   Language   @default(ENGLISH)
  createdAt  DateTime   @default(now())

  createdById String
  createdBy   User   @relation("CreatedWorksheets", fields: [createdById], references: [id])

  classId String?
  class   Class?  @relation(fields: [classId], references: [id])

  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id])

  responses WorksheetResponse[]
  homeworks Homework[]

  @@index([createdById])
  @@index([subjectId])
  @@index([classId])
}

model WorksheetResponse {
  id          String   @id @default(cuid())
  answers     Json // Student's answers
  score       Float?
  completedAt DateTime @default(now())

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  worksheetId String
  worksheet   Worksheet @relation(fields: [worksheetId], references: [id])

  @@unique([studentId, worksheetId])
}

model ChatHistory {
  id        String   @id @default(cuid())
  messages  Json // Array of {role, content, timestamp}
  topic     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  subjectId String?
  subject   Subject? @relation(fields: [subjectId], references: [id])

  @@index([studentId])
  @@index([subjectId])
  @@index([studentId, subjectId])
}

model StudentProgress {
  id        String   @id @default(cuid())
  metrics   Json // {topicsCompleted, averageScore, strengths, weaknesses}
  updatedAt DateTime @updatedAt

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id])

  @@unique([studentId, subjectId])
  @@index([studentId])
}

// Homework Management System
model Homework {
  id           String     @id @default(cuid())
  title        String
  instructions String?    @db.Text
  questions    Json       // Array of {id, question, type, options?, correctAnswer, maxMarks, topic}
  totalMarks   Int
  difficulty   Difficulty @default(MEDIUM)
  language     Language   @default(ENGLISH)
  dueDate      DateTime
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  // Relations
  teacherId String
  teacher   User   @relation("TeacherHomework", fields: [teacherId], references: [id])

  classId String
  class   Class  @relation(fields: [classId], references: [id])

  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id])

  // Optional: Link to existing worksheet
  worksheetId String?
  worksheet   Worksheet? @relation(fields: [worksheetId], references: [id])

  submissions HomeworkSubmission[]

  @@index([classId, dueDate])
  @@index([teacherId])
}

model HomeworkSubmission {
  id            String         @id @default(cuid())
  answers       Json           // Array of {questionId, answer, isCorrect?, marksAwarded?, feedback?}
  totalScore    Float?
  percentage    Float?
  status        HomeworkStatus @default(PENDING)
  submittedAt   DateTime?
  gradedAt      DateTime?
  aiFeedback    Json?          // {overallFeedback, strengths, weaknesses, suggestedTopics}
  teacherReview String?        @db.Text // Optional teacher comments
  isLate        Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  homeworkId String
  homework   Homework @relation(fields: [homeworkId], references: [id], onDelete: Cascade)

  @@unique([studentId, homeworkId])
  @@index([homeworkId, status])
  @@index([studentId, status])
}

// ========================
// BHASHINI Live Classroom
// ========================

model ClassroomSession {
  id              String             @id @default(cuid())
  sourceLanguage  BhashiniLanguage   @default(hi)
  targetLanguages BhashiniLanguage[]
  status          SessionStatus      @default(ACTIVE)
  startedAt       DateTime           @default(now())
  endedAt         DateTime?

  teacherId String
  teacher   User   @relation(fields: [teacherId], references: [id])

  classId String
  class   Class  @relation(fields: [classId], references: [id])

  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id])

  transcripts  SessionTranscript[]
  participants SessionParticipant[]

  @@index([teacherId])
  @@index([classId])
  @@index([status])
  @@index([startedAt])
}

model SessionTranscript {
  id           String           @id @default(cuid())
  sequence     Int
  originalText String           @db.Text
  language     BhashiniLanguage
  timestamp    DateTime         @default(now())
  confidence   Float?

  sessionId String
  session   ClassroomSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  translations TranscriptTranslation[]

  @@index([sessionId])
  @@index([sessionId, sequence])
}

model TranscriptTranslation {
  id             String           @id @default(cuid())
  language       BhashiniLanguage
  translatedText String           @db.Text

  transcriptId String
  transcript   SessionTranscript @relation(fields: [transcriptId], references: [id], onDelete: Cascade)

  @@unique([transcriptId, language])
}

model SessionParticipant {
  id            String           @id @default(cuid())
  preferredLang BhashiniLanguage @default(en)
  joinedAt      DateTime         @default(now())

  sessionId String
  session   ClassroomSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  @@unique([sessionId, studentId])
  @@index([sessionId])
  @@index([studentId])
}

// ========================
// BHASHINI Peer Chat
// ========================

model PeerChat {
  id        String        @id @default(cuid())
  isActive  Boolean       @default(true)
  createdAt DateTime      @default(now())
  messages  PeerMessage[]
}

model PeerMessage {
  id           String           @id @default(cuid())
  originalText String           @db.Text
  originalLang BhashiniLanguage
  translations Json             // Map of language code to translated text
  audioUrl     String?
  createdAt    DateTime         @default(now())

  chatId String
  chat   PeerChat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  senderId String
  sender   Student @relation(fields: [senderId], references: [id])

  @@index([chatId])
  @@index([senderId])
  @@index([chatId, createdAt])
}

// ========================
// BHASHINI Language Games
// ========================

model LanguageProgress {
  id         String           @id @default(cuid())
  language   BhashiniLanguage
  score      Int              @default(0)
  streakDays Int              @default(0)
  badges     Json?            // Array of badge objects
  updatedAt  DateTime         @updatedAt

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  @@unique([studentId, language])
  @@index([studentId])
}

// ========================
// Visual Diagrams
// ========================

model Diagram {
  id          String            @id @default(cuid())
  title       String
  description String?           @db.Text
  type        DiagramType       @default(FLOWCHART)
  visibility  DiagramVisibility @default(PRIVATE)

  nodes    Json  // React Flow nodes array
  edges    Json  // React Flow edges array
  viewport Json? // {x, y, zoom}

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdById String
  createdBy   User   @relation("CreatedDiagrams", fields: [createdById], references: [id])

  schoolId String
  school   School @relation(fields: [schoolId], references: [id])

  classId String?
  class   Class?  @relation(fields: [classId], references: [id])

  lessonId String?  @unique
  lesson   Lesson?  @relation(fields: [lessonId], references: [id])

  @@index([createdById])
  @@index([schoolId])
  @@index([classId])
  @@index([schoolId, visibility])
}

// ========================
// PRODUCT TIERS & SUBSCRIPTIONS
// ========================

enum ProductTier {
  STARTER
  AFFORDABLE
  ELITE
  ENTERPRISE
}

model SchoolSubscription {
  id          String      @id @default(cuid())
  tier        ProductTier @default(AFFORDABLE)
  startDate   DateTime    @default(now())
  endDate     DateTime?
  maxStudents Int         @default(500)
  maxTeachers Int         @default(50)
  features    Json?       // Override features for this subscription
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  schoolId String @unique
  school   School @relation(fields: [schoolId], references: [id])

  @@index([tier])
  @@index([isActive])
}

model FeatureUsage {
  id         String   @id @default(cuid())
  feature    String   // Feature identifier (e.g., 'ai_lesson_planning')
  usageCount Int      @default(0)
  usageDate  DateTime @default(now()) @db.Date

  schoolId String
  school   School @relation(fields: [schoolId], references: [id])

  @@unique([schoolId, feature, usageDate])
  @@index([schoolId])
  @@index([feature])
  @@index([usageDate])
}

// ========================
// TEACHER TRAINING
// ========================

enum TrainingModuleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum TrainingProgressStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  CERTIFIED
}

enum CertificationLevel {
  BRONZE
  SILVER
  GOLD
  PLATINUM
}

model TrainingCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?  @db.Text
  icon        String?  // Icon identifier or emoji
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  modules TrainingModule[]

  @@index([order])
}

model TrainingModule {
  id            String               @id @default(cuid())
  title         String
  description   String?              @db.Text
  subject       String?              // Optional subject focus
  gradeRange    String?              // e.g., "1-5", "6-10"
  content       Json                 // Module content (sections, videos, quizzes)
  duration      Int                  // Estimated duration in minutes
  difficulty    Difficulty           @default(MEDIUM)
  language      Language             @default(ENGLISH)
  status        TrainingModuleStatus @default(DRAFT)
  prerequisites String[]             // Array of module IDs
  tags          String[]
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt

  categoryId String?
  category   TrainingCategory? @relation(fields: [categoryId], references: [id])

  progress TeacherTrainingProgress[]

  @@index([status])
  @@index([categoryId])
  @@index([subject])
}

model TeacherTrainingProgress {
  id            String                 @id @default(cuid())
  progress      Int                    @default(0) // 0-100 percentage
  status        TrainingProgressStatus @default(NOT_STARTED)
  startedAt     DateTime?
  completedAt   DateTime?
  quizScores    Json?                  // {quizId: score} mapping
  timeSpentMins Int                    @default(0)
  lastAccessedAt DateTime?
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @updatedAt

  teacherId String
  teacher   User   @relation(fields: [teacherId], references: [id])

  moduleId String
  module   TrainingModule @relation(fields: [moduleId], references: [id])

  @@unique([teacherId, moduleId])
  @@index([teacherId])
  @@index([moduleId])
  @@index([status])
}

model TeacherCertification {
  id         String             @id @default(cuid())
  level      CertificationLevel
  earnedAt   DateTime           @default(now())
  validUntil DateTime?
  badgeUrl   String?
  metadata   Json?              // Additional certification data

  teacherId String
  teacher   User   @relation(fields: [teacherId], references: [id])

  @@index([teacherId])
  @@index([level])
}

model TeachingTip {
  id            String   @id @default(cuid())
  topic         String
  subject       String
  gradeLevel    String   // e.g., "Class 5", "Class 6-8"
  tip           String   @db.Text
  methodology   String?  // Teaching methodology this tip relates to
  commonMistake String?  @db.Text
  aiGenerated   Boolean  @default(false)
  rating        Float?   // Average user rating
  usageCount    Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([subject])
  @@index([topic])
  @@index([gradeLevel])
}

// ========================
// TEACHER COMMUNITY
// ========================

enum CommunityPostType {
  QUESTION
  DISCUSSION
  RESOURCE
  TIP
  ANNOUNCEMENT
}

model CommunityPost {
  id         String            @id @default(cuid())
  title      String
  content    String            @db.Text
  type       CommunityPostType @default(DISCUSSION)
  subject    String?
  tags       String[]
  upvotes    Int               @default(0)
  viewCount  Int               @default(0)
  isPinned   Boolean           @default(false)
  isResolved Boolean           @default(false) // For questions
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  authorId String
  author   User   @relation("CommunityPostAuthor", fields: [authorId], references: [id])

  schoolId String? // If null, visible to all schools
  school   School? @relation(fields: [schoolId], references: [id])

  comments CommunityComment[]
  voters   CommunityVote[]

  @@index([authorId])
  @@index([schoolId])
  @@index([type])
  @@index([subject])
  @@index([createdAt])
  @@index([upvotes])
}

model CommunityComment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  upvotes   Int      @default(0)
  isAnswer  Boolean  @default(false) // Marked as accepted answer
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId String
  author   User   @relation("CommunityCommentAuthor", fields: [authorId], references: [id])

  postId String
  post   CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  parentId String?            // For nested replies
  parent   CommunityComment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies  CommunityComment[] @relation("CommentReplies")

  voters CommunityVote[]

  @@index([postId])
  @@index([authorId])
  @@index([parentId])
}

model CommunityVote {
  id        String   @id @default(cuid())
  value     Int      @default(1) // 1 for upvote, -1 for downvote
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  postId String?
  post   CommunityPost? @relation(fields: [postId], references: [id], onDelete: Cascade)

  commentId String?
  comment   CommunityComment? @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@unique([userId, commentId])
  @@index([postId])
  @@index([commentId])
}

// ========================
// TEACHER PERFORMANCE
// ========================

model TeacherPerformanceSnapshot {
  id              String   @id @default(cuid())
  period          String   // e.g., "2024-01", "2024-Q1"
  metrics         Json     // {lessonsCreated, worksheetsCreated, homeworkAssigned, avgStudentScore, ...}
  studentOutcomes Json?    // {avgProgress, topImprovers, needsAttention}
  aiInsights      Json?    // AI-generated insights
  recommendations String[] // AI-generated recommendations
  createdAt       DateTime @default(now())

  teacherId String
  teacher   User   @relation(fields: [teacherId], references: [id])

  @@unique([teacherId, period])
  @@index([teacherId])
  @@index([period])
}

// ========================
// ELITE STUDENT FEATURES
// ========================

enum StudySessionType {
  DOUBT_SOLVING
  CONCEPT_LEARNING
  PRACTICE
  REVISION
  COMPETITIVE_PREP
}

enum ExamType {
  JEE_MAIN
  JEE_ADVANCED
  NEET
  OLYMPIAD
  NTSE
  KVPY
  SCHOOL_EXAM
  CBSE_BOARD
  ICSE_BOARD
  STATE_BOARD
}

model StudySession {
  id              String           @id @default(cuid())
  type            StudySessionType @default(DOUBT_SOLVING)
  subject         String
  topic           String?
  startedAt       DateTime         @default(now())
  endedAt         DateTime?
  duration        Int?             // Duration in minutes
  messages        Json             // Array of {role, content, timestamp}
  summary         Json?            // AI-generated session summary
  conceptsCovered String[]
  weakAreasFound  String[]
  examType        ExamType?

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  @@index([studentId])
  @@index([type])
  @@index([subject])
  @@index([startedAt])
  @@index([examType])
}

model PersonalizedLearningPath {
  id              String    @id @default(cuid())
  subject         String
  examType        ExamType?
  currentLevel    Int       @default(1) // 1-10 scale
  targetLevel     Int       @default(10)
  targetDate      DateTime?
  milestones      Json      // Array of {id, title, topics[], targetDate, completed}
  weakAreas       String[]
  strongAreas     String[]
  recommendedTime Int       @default(60) // Daily recommended time in minutes
  progress        Int       @default(0) // 0-100 percentage
  aiAdjustedAt    DateTime? // Last AI adjustment
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  @@index([studentId])
  @@index([subject])
  @@index([examType])
  @@index([isActive])
}

model PracticeQuestion {
  id            String    @id @default(cuid())
  question      String    @db.Text
  options       Json?     // For MCQ: [{label: 'A', text: '...'}]
  correctAnswer String    @db.Text
  explanation   String?   @db.Text
  difficulty    Difficulty
  subject       String
  topic         String
  subtopic      String?
  examType      ExamType?
  year          Int?      // Year of exam if from past papers
  source        String?   // e.g., "JEE Main 2023", "AI Generated"
  tags          String[]
  solveTimeAvg  Int?      // Average solve time in seconds
  successRate   Float?    // Success rate (0-1)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  attempts PracticeAttempt[]

  @@index([subject])
  @@index([topic])
  @@index([difficulty])
  @@index([examType])
}

model PracticeAttempt {
  id         String   @id @default(cuid())
  answer     String   @db.Text
  isCorrect  Boolean
  timeTaken  Int      // Time taken in seconds
  hintsUsed  Int      @default(0)
  aiFeedback String?  @db.Text
  createdAt  DateTime @default(now())

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  questionId String
  question   PracticeQuestion @relation(fields: [questionId], references: [id])

  @@index([studentId])
  @@index([questionId])
  @@index([isCorrect])
  @@index([createdAt])
}

model StudyAnalytics {
  id                  String   @id @default(cuid())
  date                DateTime @db.Date
  totalStudyTime      Int      @default(0) // Minutes
  sessionsCount       Int      @default(0)
  questionsAttempted  Int      @default(0)
  questionsCorrect    Int      @default(0)
  topicsStudied       String[]
  peakStudyHour       Int?     // 0-23 hour
  streakDays          Int      @default(0)
  weeklyGoalMet       Boolean  @default(false)
  weeklyGoalMinutes   Int      @default(300) // 5 hours default weekly goal

  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  @@unique([studentId, date])
  @@index([studentId])
  @@index([date])
}

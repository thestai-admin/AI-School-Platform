# AI School Platform - Terraform Variables
# Copy this file to terraform.tfvars and update with your values

# GCP Project Configuration
project_id   = "thestai-platform"
project_name = "ai-school"
region       = "asia-south1" # Mumbai for lowest latency in India

# Environment
environment = "production"

# Domain Configuration
domain = "thestai.com"

# Cloud Run Configuration
service_name  = "ai-school-platform"
min_instances = 1   # Keep warm for ~$5-10/month
max_instances = 3   # Scale up during peak
cpu           = "1"
memory        = "512Mi"

# Database Configuration
db_instance_name = "ai-school-db"
db_name          = "ai_school"
db_user          = "ai_school_user"
db_tier          = "db-f1-micro" # ~$9/month, suitable for 50 students
db_disk_size     = 10            # GB

# AI Model
vertex_ai_model = "gemma-2-27b-it" # Open source (Apache 2.0)
# Alternative: "gemma-2-9b-it" for faster, cheaper inference

# Secrets (optional - leave empty to auto-generate)
# nextauth_secret  = "your-32-character-secret"
# bhashini_api_key = "your-bhashini-api-key"
